# Utiliser l'image officielle PHP CLI avec version 8.1
FROM php:8.1-cli

# Installer les dépendances nécessaires, dont zip et unzip
RUN apt-get update && apt-get install -y \
    zip \
    unzip \
    libzip-dev \
    && docker-php-ext-configure zip \
    && docker-php-ext-install zip

# Définir le répertoire de travail
WORKDIR /app

# Copier tout le projet dans le container
COPY . /app

# Exposer le port 10000
EXPOSE 10000

# Démarrer un serveur PHP intégré
CMD ["php", "-S", "0.0.0.0:10000"]